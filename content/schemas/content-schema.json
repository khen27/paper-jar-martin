{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OtazoJarTopic",
  "type": "object",
  "properties": {
    "topicId": { "type": "string" },
    "theme": { "type": "string" },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string", "enum": ["regular", "crazy", "challenge"] },
          "texts": { "type": "object", "additionalProperties": { "type": "string" } },
          "tags": { "type": "array", "items": { "type": "string" } },
          "difficulty": { "type": "string", "enum": ["easy", "medium", "hard"] }
        },
        "required": ["id", "type", "texts"]
      }
    }
  },
  "required": ["topicId", "theme", "questions"]
}


